<!-- /policies/error-handling/FH-Handle-OAuth-Error.xml -->
<RaiseFault name="FH-Handle-OAuth-Error">
    <FaultResponse>
        <Set>
            <Headers>
                <Header name="WWW-Authenticate">Bearer realm="api"</Header>
            </Headers>
            <Payload contentType="application/json">
                {
                    "error": "invalid_token",
                    "error_description": "The access token is invalid or expired",
                    "error_uri": "https://docs.api.com/auth/errors#invalid-token"
                }
            </Payload>
            <StatusCode>401</StatusCode>
        </Set>
    </FaultResponse>
</RaiseFault>